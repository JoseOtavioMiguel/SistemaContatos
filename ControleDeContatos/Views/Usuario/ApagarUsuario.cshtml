@model UsuarioModel
@{
    ViewData["Title"] = "Apagar usuário";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário  (@Model.Nome) ?</h3>
</div>

<a class="btn btn-primary d-grid gap-2 mb-2 " role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger d-grid gap-2" role="button" asp-route-id="@Model.Id" asp-controller="Usuario" asp-action="Apagar">Confirmar exclusão</a>
